<UserControl x:Class="Novacos_AIManager.View.DatabaseQueryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A1A">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid Margin="40">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Text="{Binding Title}"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#FFFFFF"
                   Margin="0 0 0 24"/>

        <!-- 상태 메시지 -->
        <TextBlock Grid.Row="1"
                   Text="{Binding StatusMessage}"
                   Foreground="#B0B0B0"
                   Margin="0 0 0 16"/>

        <!-- DataGrid -->
        <Border Grid.Row="2"
                Background="#1E1E1E"
                Padding="16"
                CornerRadius="8">

            <DataGrid x:Name="ResultsGrid"
                      ItemsSource="{Binding Results}"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Background="#2A2A2A"
                      Foreground="#FFFFFF"
                      AlternatingRowBackground="#333333"
                      RowBackground="#2A2A2A"
                      GridLinesVisibility="None"
                      BorderThickness="0"
                      FontSize="14">

                <!-- 헤더 스타일 (DatabaseQueryPage와 동일) -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#3A3A3A"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderBrush" Value="#555555"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <!-- AccessText를 사용하지 않도록 TextBlock으로 헤더를 렌더링 -->
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Row 스타일 -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderBrush" Value="#444444"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </DataGrid.RowStyle>

            </DataGrid>
        </Border>

        <!-- 하단 버튼 영역 -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">

            <Button Content="등록"
                    Width="90"
                    Height="36"
                    Margin="0 0 8 0"
                    Visibility="{Binding IsUserInfoPage, Converter={StaticResource BoolToVisibility}}"
                    Background="#3A3A3A"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="RegisterUser"/>

            <Button Content="삭제"
                    Width="90"
                    Height="36"
                    Margin="0 0 8 0"
                    Visibility="{Binding IsUserInfoPage, Converter={StaticResource BoolToVisibility}}"
                    Background="#3A3A3A"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="DeleteUser"/>

            <Button Content="조회"
                    Width="90"
                    Height="36"
                    Background="#3A3A3A"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Command="{Binding RefreshCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>


