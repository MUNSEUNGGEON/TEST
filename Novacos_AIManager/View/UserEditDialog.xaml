<Window x:Class="Novacos_AIManager.View.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="회원가입"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        Background="#1E1E1E"
        Foreground="White">

    <!-- 윈도우 전체가 카드처럼 보이도록 Border 하나만 사용 -->
    <Border CornerRadius="12"
            Padding="24"
            Margin="8"
            Background="#1E1E1E"
            BorderBrush="#333333"
            BorderThickness="1">

        <StackPanel>

            <!-- 상단 제목 -->
            <TextBlock Text="회원가입"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0 0 0 8"/>
            <TextBlock Text="NOVACOS AI Manager 계정을 등록합니다."
                       FontSize="12"
                       Foreground="#B0B0B0"
                       Margin="0 0 0 20"/>

            <!-- 폼 영역 -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 아이디 -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Margin="0 0 10 10"
                           VerticalAlignment="Center">
                    <Run Text="* " Foreground="#FF5A5A"/>
                    <Run Text="아이디"/>
                </TextBlock>
                <TextBox x:Name="IdTextBox"
                         Grid.Row="0" Grid.Column="1"
                         Margin="0 0 0 10"
                         Padding="6"
                         Background="#262626"
                         BorderBrush="#3A3A3A"
                         BorderThickness="1"
                         Foreground="White"/>

                <!-- 비밀번호 -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Margin="0 0 10 10"
                           VerticalAlignment="Center">
                    <Run Text="* " Foreground="#FF5A5A"/>
                    <Run Text="비밀번호"/>
                </TextBlock>
                <PasswordBox x:Name="PasswordBox"
                             Grid.Row="1" Grid.Column="1"
                             Margin="0 0 0 10"
                             Padding="6"
                             Background="#262626"
                             BorderBrush="#3A3A3A"
                             BorderThickness="1"
                             Foreground="White"/>

                <!-- 비밀번호 확인 -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Margin="0 0 10 10"
                           VerticalAlignment="Center">
                    <Run Text="* " Foreground="#FF5A5A"/>
                    <Run Text="비밀번호 확인"/>
                </TextBlock>
                <PasswordBox x:Name="PasswordConfirmBox"
                             Grid.Row="2" Grid.Column="1"
                             Margin="0 0 0 10"
                             Padding="6"
                             Background="#262626"
                             BorderBrush="#3A3A3A"
                             BorderThickness="1"
                             Foreground="White"/>

                <!-- 이메일 -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Margin="0 0 10 10"
                           VerticalAlignment="Center">
                    <Run Text="* " Foreground="#FF5A5A"/>
                    <Run Text="이메일"/>
                </TextBlock>
                <TextBox x:Name="EmailTextBox"
                         Grid.Row="3" Grid.Column="1"
                         Margin="0 0 0 10"
                         Padding="6"
                         Background="#262626"
                         BorderBrush="#3A3A3A"
                         BorderThickness="1"
                         Foreground="White"/>

                <!-- 사용자 이름 -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Margin="0 0 10 10"
                           VerticalAlignment="Center">
                    <Run Text="* " Foreground="#FF5A5A"/>
                    <Run Text="사용자 이름"/>
                </TextBlock>
                <TextBox x:Name="UserNameTextBox"
                         Grid.Row="4" Grid.Column="1"
                         Margin="0 0 0 10"
                         Padding="6"
                         Background="#262626"
                         BorderBrush="#3A3A3A"
                         BorderThickness="1"
                         Foreground="White"/>

                <!-- 사용자 유형 -->
                <TextBlock Grid.Row="5" Grid.Column="0"
                           Margin="0 0 10 10"
                           VerticalAlignment="Center">
                    <Run Text="* " Foreground="#FF5A5A"/>
                    <Run Text="사용자 유형"/>
                </TextBlock>
                <ComboBox x:Name="UserTypeComboBox"
                          Grid.Row="5" Grid.Column="1"
                          Margin="0 0 0 10"
                          Padding="4"
                          Background="#262626"
                          BorderBrush="#3A3A3A"
                          BorderThickness="1"
                          Foreground="Black">
                    <ComboBoxItem IsSelected="True" IsEnabled="False" Foreground="Black">선택</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="2">매니저</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="1">현장관리자</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="3">작업자</ComboBoxItem>
                </ComboBox>

                <!-- 소속 -->
                <TextBlock Grid.Row="6" Grid.Column="0"
                           Margin="0 0 10 10"
                           VerticalAlignment="Center">
                    <Run Text="* " Foreground="#FF5A5A"/>
                    <Run Text="소속"/>
                </TextBlock>
                <ComboBox x:Name="DepartmentComboBox"
                          Grid.Row="6" Grid.Column="1"
                          Margin="0 0 0 10"
                          Padding="4"
                          Background="#262626"
                          BorderBrush="#3A3A3A"
                          BorderThickness="1"
                          Foreground="Black">
                    <ComboBoxItem IsSelected="True" IsEnabled="False" Foreground="Black">선택</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="104">연구소</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="105">글로벌사업부</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="103">융합사업부</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="112">공공사업부</ComboBoxItem>
                </ComboBox>

                <!-- 직책 -->
                <TextBlock Grid.Row="7" Grid.Column="0"
                           Margin="0 0 10 10"
                           VerticalAlignment="Center">
                    <Run Text="* " Foreground="#FF5A5A"/>
                    <Run Text="직책"/>
                </TextBlock>
                <ComboBox x:Name="PositionComboBox"
                          Grid.Row="7" Grid.Column="1"
                          Margin="0 0 0 10"
                          Padding="4"
                          Background="#262626"
                          BorderBrush="#3A3A3A"
                          BorderThickness="1"
                          Foreground="Black">
                    <ComboBoxItem IsSelected="True" IsEnabled="False" Foreground="Black">선택</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="110">연구원</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="107">과장</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="108">차장</ComboBoxItem>
                    <ComboBoxItem Foreground="Black" Tag="109">상무</ComboBoxItem>
                </ComboBox>
                <!-- 버튼 -->
                <StackPanel Grid.Row="8" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0 10 0 0">
                    <Button Content="취소"
                            Width="90"
                            Margin="0 0 8 0"
                            Padding="4"
                            Background="#2A2A2A"
                            BorderBrush="#444444"
                            Foreground="White"
                            Click="Cancel_Click"/>
                    <Button Content="가입하기"
                            Width="90"
                            Padding="4"
                            Background="#3C7DFF"
                            BorderBrush="#3C7DFF"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
