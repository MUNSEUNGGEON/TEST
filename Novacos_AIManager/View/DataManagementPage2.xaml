<UserControl x:Class="Novacos_AIManager.View.DataManagementPage2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A1A">

    <Grid Margin="40">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Text="{Binding Title}"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#FFFFFF"
                   Margin="0 0 0 30"/>

        <!-- 날짜 선택 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 30">
            <StackPanel Orientation="Horizontal" Margin="0 0 40 0">
                <TextBlock Text="Start"
                           Foreground="#FFFFFF"
                           Margin="0 0 10 0"/>
                <DatePicker SelectedDate="{Binding StartDate}"
                            Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="End"
                           Foreground="#FFFFFF"
                           Margin="0 0 10 0"/>
                <DatePicker SelectedDate="{Binding EndDate}"
                            Width="200"/>
            </StackPanel>
        </StackPanel>

        <!-- DataGrid -->
        <Border Grid.Row="2"
                Background="#1E1E1E"
                CornerRadius="8"
                Padding="20">

            <DataGrid x:Name="DG"
                      ItemsSource="{Binding FilteredItems}"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      Background="#2A2A2A"
                      Foreground="#FFFFFF"
                      RowBackground="#2A2A2A"
                      AlternatingRowBackground="#333333"
                      BorderThickness="0"
                      GridLinesVisibility="None"
                      FontSize="14"
                      Loaded="DG_Loaded">

                <!-- 헤더 스타일 (DatabaseQueryPage와 동일) -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#3A3A3A"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderBrush" Value="#555555"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <!-- AccessText를 사용하지 않도록 TextBlock으로 헤더를 렌더링 -->
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Row 스타일 -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderBrush" Value="#444444"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                    </Style>
                </DataGrid.RowStyle>

            </DataGrid>
        </Border>

        <!-- 조회 버튼 -->
        <Button Grid.Row="3"
                Content="조회"
                Width="90"
                Height="36"
                HorizontalAlignment="Right"
                Margin="0 20 0 0"
                Background="#3A3A3A"
                Foreground="#FFFFFF"
                BorderThickness="0"
                Cursor="Hand"
                Command="{Binding SearchCommand}"/>
    </Grid>
</UserControl>
