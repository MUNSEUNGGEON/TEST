<UserControl x:Class="Novacos_AIManager.View.AnalysisLeftMenu"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E">

    <Border Background="#1E1E1E" Padding="20">
        <StackPanel>

            <!-- ▸ 분석엔진 -->
            <Border Background="Transparent" Cursor="Hand" MouseDown="ToggleEngineMenu">
                <TextBlock Text="분석엔진"
                           Foreground="White"
                           FontSize="16"
                           Margin="0 0 0 10"/>
            </Border>

            <!-- ▼ 분석엔진 하위메뉴 -->
            <StackPanel x:Name="EngineSubMenu" Visibility="Collapsed" Margin="20 0 0 15">

                <Border Cursor="Hand" MouseDown="OpenEngineVersion">
                    <TextBlock Text="분석엔진버전"
                               Foreground="White"
                               FontSize="14"
                               Margin="0 5"/>
                </Border>

                <Border Cursor="Hand" MouseDown="OpenEngineDeploy">
                    <TextBlock Text="분석엔진배포"
                               Foreground="White"
                               FontSize="14"
                               Margin="0 5"/>
                </Border>

            </StackPanel>



            <!-- ▸ 학습데이터 -->
            <Border Background="Transparent" Cursor="Hand" MouseDown="ToggleDataMenu">
                <TextBlock Text="학습데이터"
                           Foreground="White"
                           FontSize="16"
                           Margin="0 10 0 10"/>
            </Border>

            <!-- ▼ 학습데이터 하위메뉴 -->
            <StackPanel x:Name="DataSubMenu" Visibility="Collapsed" Margin="20 0 0 15">

                <Border Cursor="Hand" MouseDown="OpenDataVersion">
                    <TextBlock Text="학습데이터버전"
                               Foreground="White"
                               FontSize="14"
                               Margin="0 5"/>
                </Border>

                <Border Cursor="Hand" MouseDown="OpenDataDeploy">
                    <TextBlock Text="학습데이터배포"
                               Foreground="White"
                               FontSize="14"
                               Margin="0 5"/>
                </Border>

            </StackPanel>



            <!-- ▸ 학습모니터링 -->
            <Border Background="Transparent" Cursor="Hand" MouseDown="ToggleMonitoringMenu">
                <TextBlock Text="학습모니터링"
                           Foreground="White"
                           FontSize="16"
                           Margin="0 10 0 10"/>
            </Border>

            <!-- ▼ 학습모니터링 하위메뉴 -->
            <StackPanel x:Name="MonitoringSubMenu" Visibility="Collapsed" Margin="20 0 0 15">

                <Border Cursor="Hand" MouseDown="OpenMonitoringEngine">
                    <TextBlock Text="분석엔진"
                               Foreground="White"
                               FontSize="14"
                               Margin="0 5"/>
                </Border>

                <Border Cursor="Hand" MouseDown="OpenMonitoringData">
                    <TextBlock Text="학습데이터"
                               Foreground="White"
                               FontSize="14"
                               Margin="0 5"/>
                </Border>

            </StackPanel>

            <!-- ▸ 사용자정보 -->
            <Border Background="Transparent" Cursor="Hand" MouseDown="OpenUserInfo">
                <TextBlock Text="사용자정보"
                           Foreground="White"
                           FontSize="16"
                           Margin="0 10 0 10"/>
            </Border>
        </StackPanel>
    </Border>

</UserControl>